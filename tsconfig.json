{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@content/*": ["./src/content/*"],
            "@styles/*": ["./src/styles/*"],
            "@assets/*": ["./src/assets/*"],
            "@utils/*": ["./src/utils/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": ["src", "astro.config.mjs"],
    "exclude": ["node_modules", "docs"]
}
