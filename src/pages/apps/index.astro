---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AppItem from '../../components/AppItem.astro';
import { getCollection } from "astro:content";

const allApps = await getCollection("apps");
const pageTitle = "All apps"
---
<BaseLayout pageTitle={pageTitle}>
  <p>This is where I will list all apps.</p>
  <ul>
    {allApps.map((app: any) => <AppItem url={`/apps/${app.id}/`} title={app.data.title} />)}
  </ul>
</BaseLayout>