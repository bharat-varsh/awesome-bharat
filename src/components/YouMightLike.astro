---
import RelatedItem from './RelatedItem.astro';
import type { CollectionEntry } from 'astro:content';

type CollectionType = 'apps' | 'persons' | 'companies';

interface Props {
    items: Array<{
        item: CollectionEntry<CollectionType>;
        resolved?: Record<string, any>;
    }>;
    collectionName: CollectionType;
    title?: string;
    maxItems?: number;
}

const { items, collectionName, title = 'You Might Like', maxItems = 6 } = Astro.props;

const displayItems = items.slice(0, maxItems);
---

{
    displayItems.length > 0 && (
        <div class="space-y-3">
            <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
            <div class="grid grid-cols-2 gap-x-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-1">
                {displayItems.map(({ item, resolved }) => (
                    <>
                        <RelatedItem item={item} collection={collectionName} resolved={resolved} />
                        {/* <div class="border-t border-gray-300 dark:border-gray-700 col-span-2 md:col-span-1"></div> */}
                    </>
                ))}
            </div>
        </div>
    )
}
