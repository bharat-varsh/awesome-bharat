---
import { Image } from 'astro:assets';
import { formatDate } from '../utils/dateUtils.ts';
import { resolveCoverImage } from '../utils/imageResolvers.ts';

export interface Props {
    title: string;
    description: string;
    href: string;
    date: Date;
    tags?: string[];
    image?: string;
    slug: string;
}

const { title, description, href, date, tags, image, slug } = Astro.props;
const resolvedImage = resolveCoverImage(slug, image);

// const images = resolvePageImages(frontmatter.images);
---

<article
    class="group relative flex flex-col h-full bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden"
>
    {
        resolvedImage && (
            <a href={href} class="block aspect-video overflow-hidden">
                <Image
                    src={resolvedImage}
                    alt={title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    format="webp"
                    width={400}
                    height={300}
                    sizes="(min-width: 1280px) 320px, (min-width: 768px) 240px, 200px"
                    loading="eager"
                />
            </a>
        )
    }

    <div class="flex-1 flex flex-col p-6">
        <div class="flex-1">
            <a href={href} class="block">
                <h3
                    class="text-xl font-semibold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors"
                >
                    {title}
                </h3>
            </a>

            <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                {description}
            </p>
        </div>

        <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-500">
            <time datetime={date.toISOString()}>
                {formatDate(date)}
            </time>

            {
                tags && tags.length > 0 && (
                    <div class="flex gap-2">
                        {tags.slice(0, 2).map((tag) => (
                            <span class="px-2 py-1 text-xs rounded bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300">
                                {tag}
                            </span>
                        ))}
                    </div>
                )
            }
        </div>
    </div>
</article>

