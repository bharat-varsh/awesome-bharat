---
import { formatDate } from '../utils/dateUtils.ts';

export interface Props {
    title: string;
    description: string;
    href: string;
    date: Date;
    tags?: string[];
    image?: string;
}

const { title, description, href, date, tags, image } = Astro.props;
---

<article class="group relative flex flex-col h-full bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden">
    {image && (
        <a href={href} class="block aspect-video overflow-hidden">
            <img
                src={image}
                alt={title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
            />
        </a>
    )}

    <div class="flex-1 flex flex-col p-6">
        <div class="flex-1">
            <a href={href} class="block">
                <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                    {title}
                </h3>
            </a>

            <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                {description}
            </p>
        </div>

        <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-500">
            <time datetime={date.toISOString()}>
                {formatDate(date)}
            </time>

            {tags && tags.length > 0 && (
                <div class="flex gap-2">
                    {tags.slice(0, 2).map((tag) => (
                        <span class="px-2 py-1 text-xs rounded bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300">
                            {tag}
                        </span>
                    ))}
                </div>
            )}
        </div>
    </div>
</article>
