---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

// Fetch all collections
const apps = (await getCollection('apps')) as Array<CollectionEntry<'apps'>>;
const persons = (await getCollection('persons')) as Array<CollectionEntry<'persons'>>;
const companies = (await getCollection('companies')) as Array<CollectionEntry<'companies'>>;

const publishedApps = apps.filter((app) => !app.data.draft);
const publishedPersons = persons.filter((person) => !person.data.draft);
const publishedCompanies = companies.filter((company) => !company.data.draft);

const collections = [
    {
        name: 'Apps',
        href: '/apps',
        icon: 'apps',
        count: publishedApps.length,
    },
    {
        name: 'Persons',
        href: '/persons',
        icon: 'persons',
        count: publishedPersons.length,
    },
    {
        name: 'Companies',
        href: '/companies',
        icon: 'companies',
        count: publishedCompanies.length,
    },
];

const currentPath = Astro.url.pathname;

const isActive = (href: string) => {
    if (href === '/') return currentPath === '/';
    return currentPath.startsWith(href);
};
