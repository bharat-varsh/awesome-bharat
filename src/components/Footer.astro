---
const currentYear = new Date().getFullYear();

const quickLinks = [{ label: 'RSS Feed', url: '/rss.xml' }];

const socials = [
    {
        url: 'https://github.com/bharat-varsh/awesome-bharat',
        ariaLabel: 'GitHub',
        svg: `
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="24"
                height="24"
                class="w-6 h-6"
                >
                <path
                    fill="currentColor"
                    d="M9 17.25a.75.75 0 1 1 1.5 0 .75.75 0 0 1-1.5 0Zm6.125 5.164A2.25 2.25 0 0 1 14.25 22.5a2.25 2.25 0 0 1-2.25-2.25v-2.727a2.04 2.04 0 0 1 1.444-1.998A6.74 6.74 0 0 0 18 12.75V11.25a3.13 3.13 0 0 0-.75-1.94V7.734c0-.828-.672-1.111-1.5-.633l-1.149.665a3.11 3.11 0 0 0-1.101-.141h-3a3.11 3.11 0 0 0-1.101.141l-1.149-.665c-.828-.478-1.5-.195-1.5.633V9.31A3.13 3.13 0 0 0 6 11.25v1.5c0 1.091.68 2.071 1.621 2.757a.77.77 0 0 1 .329.622.75.75 0 0 1-.75.75.74.74 0 0 1-.538-.23C5.391 15.684 4.5 14.296 4.5 12.75v-1.5c0-.869.282-1.687.75-2.408V6.609c0-1.656 1.343-2.224 3-1.266l1.287.745c.321-.061.64-.088.963-.088h3c.323 0 .642.027.963.088l1.287-.745c1.657-.958 3-.39 3 1.266v2.233c.468.721.75 1.539.75 2.408v1.5c0 2.232-1.84 4.132-4.009 4.892a.7.7 0 0 0-.491.7v2.108c0 .414.336.75.75.75.063 0 .12-.018.178-.033C19.78 20.175 22.5 16.41 22.5 12c0-5.796-4.704-10.5-10.5-10.5S1.5 6.204 1.5 12c0 4.566 2.918 8.44 6.99 9.886a.45.45 0 0 0 .51-.386.45.45 0 0 0-.45-.45c-2.492-.067-2.495-2.994-3.292-2.994a.75.75 0 1 1 0-1.5h.375c1.5 0 1.286 3 3.377 3a1.5 1.5 0 0 1 1.5 1.5v1.312A1.31 1.31 0 0 1 9.188 23a1.2 1.2 0 0 1-.229-.031C3.806 21.622 0 16.95 0 12 0 5.373 5.373 0 12 0s12 5.373 12 12c0 5.081-3.164 9.414-7.625 11.164Z"
                />
            </svg>
        `,
    },
];
---

<footer class="bg-gray-50 dark:bg-gray-950 border-t border-gray-200 dark:border-gray-800">
    <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- About section -->
            <div>
                <h3 class="text-lg font-semibold mb-4">About</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm">
                    A curated collection of awesome made by Indians! Discover your inspiration and
                    the great people who made that possible!
                </p>
            </div>

            <!-- Quick links -->
            <div>
                <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                <ul class="space-y-2 text-sm">
                    {
                        quickLinks.map((link) => (
                            <li>
                                <a
                                    href={link.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Socials -->
            <div>
                <h3 class="text-lg font-semibold mb-4">Socials</h3>
                <div class="flex space-x-4">
                    <ul class="space-y-2 text-sm">
                        {
                            socials.map((social) => (
                                <li>
                                    <a
                                        href={social.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                                        aria-label={social.ariaLabel}
                                        set:html={social.svg}
                                    />
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
                <p class="text-center text-sm text-gray-600 dark:text-gray-400">
                    Â© {currentYear} [ Awesome ] Bharat. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>
