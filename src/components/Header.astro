---
import { Image } from 'astro:assets';
import ThemeToggle from './ThemeToggle.astro';

const socials = [
    {
        url: 'https://github.com/bharat-varsh/awesome-bharat',
        ariaLabel: 'GitHub',
        svg: `
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="w-5 h-5 fill-current"
                aria-hidden="true"
            >
                <path
                    fill-rule="evenodd"
                    d="M12 1C5.923 1 1 5.923 1 12c0 4.867 3.149 8.979 7.521 10.436.55.096.756-.233.756-.522 0-.262-.013-1.128-.013-2.049-2.764.509-3.479-.674-3.699-1.292-.124-.317-.66-1.293-1.127-1.554-.385-.207-.936-.715-.014-.729.866-.014 1.485.797 1.691 1.128.99 1.663 2.571 1.196 3.204.907.096-.715.385-1.196.701-1.471-2.448-.275-5.005-1.224-5.005-5.432 0-1.196.426-2.186 1.128-2.956-.111-.275-.496-1.402.11-2.915 0 0 .921-.288 3.024 1.128a10.193 10.193 0 0 1 2.75-.371c.936 0 1.871.123 2.75.371 2.104-1.43 3.025-1.128 3.025-1.128.605 1.513.221 2.64.111 2.915.701.77 1.127 1.747 1.127 2.956 0 4.222-2.571 5.157-5.019 5.432.399.344.743 1.004.743 2.035 0 1.471-.014 2.654-.014 3.025 0 .289.206.632.756.522C19.851 20.979 23 16.854 23 12c0-6.077-4.922-11-11-11Z"
                />
            </svg>
        `,
    },
];
---

<header
    class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="grid grid-cols-2 md:grid-cols-3 grid-rows-2 md:grid-rows-1 items-center h-auto md:h-16 gap-y-1"
        >
            <!-- Left: Social Icons -->
            <div class="flex items-center gap-1 justify-start row-start-1 col-start-1">
                {
                    socials.map((social) => (
                        <a
                            href={social.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                            aria-label={social.ariaLabel}
                            set:html={social.svg}
                        />
                    ))
                }
            </div>

            <!-- Center: Logo + Title -->
            <a
                href="/"
                class="flex flex-col md:flex-row items-center gap-1 md:gap-2 justify-center
            col-start-1 col-end-3 md:col-start-2 md:col-end-3
            row-start-1 row-end-3 md:row-start-1
            text-center my-1 md:my-0"
            >
                <Image
                    src="/images/awebha-logo.svg"
                    alt="Awesome Bharat Logo"
                    class="h-8 md:h-6 lg:h-8 w-auto"
                    width={36}
                    height={36}
                    loading="eager"
                />
                <span
                    class="group text-lg md:text-xl lg:text-2xl
                        font-bold md:font-semibold lg:font-bold
                        hover:text-primary-600 dark:hover:text-primary-400"
                >
                    <span
                        class="text-primary-600 dark:text-primary-400
                        group-hover:text-gray-950 dark:group-hover:text-primary-100"
                    >
                        [ Awesome ]
                    </span>
                    Bharat
                </span>
            </a>

            <!-- Right: Theme Toggle (single instance) -->
            <div
                class="flex items-center gap-1 justify-end
                row-start-1 col-start-2
                md:row-start-1 md:col-start-3"
            >
                <ThemeToggle />
            </div>
        </div>
    </div>
</header>
