---
import Navigation from './Navigation.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <div class="flex-shrink-0">
                <a href="/" class="text-2xl font-bold text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
                    [ Awesome ] Bharat
                </a>
            </div>
            
            <Navigation />

            <div class="flex items-center">
                <ThemeToggle />
            </div>
        </div>
    </div>
</header>
